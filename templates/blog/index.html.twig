{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
<h1>Post index</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Content</th>
            <th>Cr√©ation</th>
            <th>Modification</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
            <td>{{ post.title }}</td>
            <td>{{ post.content|slice(0, 20) }} ... <a href="{{ path('app_blog_show_post', {'slug': post.slug}) }}">lire la suite</a></td>
            <td>{{ post.createdAt|date('Y-m-d H:i:s')}}</td>
            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>
                <div class="m-1">
                    <a href="{{ path('app_blog_show_post', {'slug': post.slug}) }}" class="btn btn-secondary btn-sm">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                </div>
                <div class="m-1">
                    <a href="{{ path('app_blog_edit_post', {'slug': post.slug}) }}" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                </div>
            </td>

        </tr>
        {% else %}
        <tr>
            <td colspan="7">Aucun post pour le moment</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# {% if app.user %} #}
    <a class="btn btn-primary btn-sm" href="{{ path('app_blog_new_post') }}">Nouvelle publication</a>
{# {% endif %} #}


{% endblock %}