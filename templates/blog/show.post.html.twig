{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<h1>Post</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ post.slug }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ post.content }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ post.createdAt|date('Y-m-d')}}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d') : 'Jamais modifié' }}</td>
        </tr>
    </tbody>
</table>

<div>
    <div class="d-flex">
        
        <div class="m-1">
            <a class="btn btn-warning btn-sm" href="{{ path('app_blog_edit_post', {'id': post.id}) }}">Modifier</a>
        </div>

        <div class="m-1">
            {{ include('blog/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="m-1">
        <a class="btn btn-secondary btn-sm" href="{{ path('app_blog_index') }}"><i class="fa-solid fa-arrow-left"></i>
            Retour à la liste</a>
    </div>
</div>

{% endblock %}