<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>

    <!-- Header -->
    <header>
        <!-- Nav -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            {% include '_includes/_base.nav.html.twig' %}
        </nav>

        <!-- message flash -->
        <div id="messages" class="text-center m-auto">
            {% include '_includes/_base.messages.html.twig' %}
        </div>
    </header>

    <!-- Main -->
    <main class="container mt-4 mb-4">
        <!-- Content -->
        <div class="content-main">
            {% block body %}{% endblock %}
        </div>
    </main>

    <!-- Footer -->
    <footer id="sticky-footer" class="flex-shrink-0 py-4">
        {% include '_includes/_base.footer.html.twig' %}
    </footer>

</body>

</html>